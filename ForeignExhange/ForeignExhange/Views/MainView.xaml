<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForeignExhange.Views.MainView"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,15">
            
            <Label 
                Text="Fareign Exchange"
                FontAttributes="Bold"
                FontSize="Medium"
                HorizontalOptions="Center"/>

            <StackLayout Orientation="Horizontal">
                <Label 
                   Text="Monto:"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Bold"
                   />

                <Entry
                    Placeholder="Ingrese la cantidad"
                    
                    />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label 
                   Text="Taza origen:"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Bold"
                   />

                <Picker
                    Title="Seleccione la taza">
                </Picker>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label 
                   Text="Taza odjetivo:"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Bold"
                   />

                <Picker
                    Title="Seleccione la taza"
                   >
                   
                </Picker>
            </StackLayout>

            <ActivityIndicator/>

            <Button 
                BackgroundColor="Green"
                BorderRadius="20"
                Margin="0,15,0,0"
                Text="Convertir"
                HeightRequest="40"
                />

            <Label
                Margin="0,15,0,0"
                BackgroundColor="White"
                Text="Cargando datos..."
                TextColor="Black"
                VerticalOptions="FillAndExpand"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                />




        </StackLayout>
    </ContentPage.Content>
</ContentPage>