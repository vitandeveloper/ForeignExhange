<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForeignExhange.Views.MainView"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,15">
            
            <Label 
                Text="Fareign Exchange"
                FontAttributes="Bold"
                FontSize="Medium"
                HorizontalOptions="Center"/>

            <StackLayout Orientation="Horizontal">
                <Label 
                   Text="Monto:"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Bold"
                   />

                <Entry
                    Text="{Binding Amount, Mode=TwoWay}"
                    Placeholder="Ingrese la cantidad"
                    
                    />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label 
                   Text="Taza origen:"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Bold"
                   />

                <Picker
                    ItemsSource="{Binding Rates}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SourceRate, Mode=TwoWay}"
                    Title="Seleccione la taza">
                </Picker>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label 
                   Text="Taza odjetivo:"
                    VerticalOptions="Center"
                    FontSize="Medium"
                    FontAttributes="Bold"
                   />

                <Picker
                    ItemsSource="{Binding Rates}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding TargeteRate, Mode=TwoWay}"
                    Title="Seleccione una taza de cambio">
                   >
                   
                </Picker>
            </StackLayout>

            <ActivityIndicator
                IsRunning="{Binding IsRunning, Mode=TwoWay}">
                
            </ActivityIndicator>

            <Button 
                Command="{Binding ConvertCommand}"
                BackgroundColor="Green"
                BorderRadius="20"
                Margin="0,15,0,0"
                IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                Text="Convertir"
                HeightRequest="40"
                />

            <Label
                Margin="0,15,0,0"
                BackgroundColor="White"
                Text="{Binding Result, Mode=TwoWay}"
                TextColor="Black"
                VerticalOptions="FillAndExpand"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                 />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>