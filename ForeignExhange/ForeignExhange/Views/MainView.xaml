<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForeignExhange.Views.MainView"
             xmlns:i18n="clr-namespace:ForeignExhange.Helpers"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundColor="#EEEEEE">
    
    <ContentPage.Padding>
        <OnPlatform 
            x:TypeArguments="Thickness"
            iOS="20,30,20,20"
            Android="20,10,20,20"/>
    </ContentPage.Padding>
    
    <ContentPage.Content>
        <StackLayout>

            <Label 
                    Text="{i18n:Translate Title}" 
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Margin="0,0,0,10">
            </Label>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label 
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,15,0,0"
                    Text="{i18n:Translate AmountLabel}" 
                    VerticalOptions="Center"
                    FontSize="13"
                    FontAttributes="Bold"
                    >
                </Label>

                <Entry
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    FontSize="13"
                    Text="{Binding Amount, Mode=TwoWay}"
                    Placeholder="{i18n:Translate AmountPlaceHolder}" 
                    Keyboard="Numeric">
                </Entry>

                <Label 
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="{i18n:Translate SourceRateLabel}" 
                    VerticalOptions="Center"
                    FontSize="13"
                    FontAttributes="Bold"
                    >
                </Label>

                <Picker
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding Rates}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SourceRate, Mode=TwoWay}"
                    Title="{i18n:Translate SourceRateTitle}">
                </Picker>

                <Label 
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="{i18n:Translate TargetRateLabel}"
                    VerticalOptions="Center"
                    FontSize="13"
                    FontAttributes="Bold"
                    >
                </Label>

                <Picker
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    ItemsSource="{Binding Rates}"
                    ItemDisplayBinding="{Binding Name}" 
                    SelectedItem="{Binding TargeteRate, Mode=TwoWay}"
                    Title="{i18n:Translate TargetRateTitle}">
                </Picker>

                <StackLayout
                    Grid.Row="1"
                    Grid.Column="3"
                    Grid.RowSpan="2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">

                    <Image
                    HeightRequest="50"
                    WidthRequest="50"
                    Source="ic_change_money.png"
                    >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SwitchCommand, Mode=TwoWay}"/>
                        </Image.GestureRecognizers>
                    </Image>

                </StackLayout>

            </Grid>

            <!-- 
                <ActivityIndicator
                  
                    IsRunning="{Binding IsRunning, Mode=TwoWay}">
                </ActivityIndicator>
                -->

            <Button 
                Command="{Binding ConvertCommand}"
                 BackgroundColor="#00796B"
                 Margin="0,15,0,0"
                 IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                 Text="{i18n:Translate Convert}"
                 FontSize="15"
                 TextColor="White"
                 HeightRequest="40"
                >
            </Button>

            <Frame
                CornerRadius="20"
                Margin="0,15,0,0"
                BackgroundColor="White"
                VerticalOptions="FillAndExpand">

                <Label
                    Text="{Binding Result, Mode=TwoWay}"
                    TextColor="Black"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center">
                </Label>

            </Frame>

      
            <StackLayout
                Margin="0,15,0,0"
                BackgroundColor="{Binding ColorAlert, Mode=TwoWay}"
                HeightRequest="35"
                >
                <Label
                TextColor="White"
                VerticalOptions="CenterAndExpand"
                FontSize="13"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                Text="{Binding Status, Mode=TwoWay}"
                >
                </Label>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>